{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "prettier-standard/lib/base",
    "eslint:recommended",
    "plugin:node/recommended",
    "prettier"
  ],
  "plugins": ["import", "node"],
  "rules": {
    "no-console":"off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "printWidth": 100
      }
    ],
    "node/no-unsupported-features": "off",
    "node/no-unpublished-require": 0
  }
}
